<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pixabay"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/notepad_rogo"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:src="@drawable/memo_long_rogo" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="295dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
ㅈㅂ
        <EditText
            android:id="@+id/Textbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/memo_folder"
            android:hint=" 글을 입력하세요."
            android:padding="20dp"
            android:singleLine="true"
            android:textColorHighlight="#F7DEAD" />

        <Button
            android:id="@+id/btn_expand"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/expand_note"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Sharing"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#FBC02D"
            android:text="공유"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />


        <Button
            android:id="@+id/Clear"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FBC02D"
            android:text="지우기"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
                android:id="@+id/Function"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-기능 설정-"
                android:textAlignment="center"
                android:textColor="#6F7777"
                android:textSize="9pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

            <Button
                android:id="@+id/Text"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#FBC02D"
                android:text="글씨"
                android:textColor="#FFFFFF"
                android:textSize="10pt" />

            <Button
                android:id="@+id/background_bt"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FBC02D"
                android:text="배경"
                android:textColor="#FFFFFF"
                android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#FBC02D"
            android:text="초기화"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />

        <Button
            android:id="@+id/end"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FBC02D"
            android:text="종료"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </LinearLayout>












